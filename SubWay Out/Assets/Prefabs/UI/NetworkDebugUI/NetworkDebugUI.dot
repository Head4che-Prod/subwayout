digraph NetworkDebugUI {
    // Red: All clients
    // Purple: Host & client
    // Blue: Self
    
    buttonsOn [label = "Activate buttons";shape = box;style = filled;fillcolor = green;fontcolor = white;];
    buttonsOff [label = "Deactivate buttons";shape = box;style = filled;fillcolor = red;fontcolor = white;];
    
    initialization [label = "Game start";shape = doubleoctagon;color = blue;];
    initialization -> buttonsOn [color = blue;];
    
    serverStart [label = "Server button";color = blue;];
    serverStart -> buttonsOff [color = blue;];
    
    clientStart [label = "Client button";color = blue;];
    clientStart -> buttonsOff [color = blue;];
    
    serverStop [label = "Server stop";color = red;];
    serverStop -> buttonsOn [color = red;];
    
    clientStop [label = "Client disconnect";color = purple;];
    clientStop -> buttonsOn [color = blue;];
}